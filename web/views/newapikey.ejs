<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('parts/headers.ejs') %>
        <title>NekoNya, website for nekos</title>
        <style>
            .newapikey {
                width: 100%;
                height: 100vh;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                margin: 0;
            }

            .newapikey > div {
                width: 100%;
                height: 100vh;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                margin: 0;
                flex-grow: 1;
            }

            .newapikey > div > div {
                max-width: 800px;
                width: 50%;
                height: fit-content;
                background-color: #ffffff;
                border-radius: 10px;
                padding: 20px;
            }

            .newapikey > footer {
                width: 100%;
                flex-grow: 0;
            }
        </style>
    </head>
    <body style="background-color: #bbbbbb;" class="d-flex flex-column min-vh-100">
        <div class="newapikey">
            <div>
                <div>
                    <form method="post" action="/newapikey?password=<%- password %>">
                        <div class="mb-3">
                            <label for="user_id" class="form-label">User ID</label>
                            <input type="text" name="user_id" class="form-control" id="user_id" required>
                        </div>
                        <div class="mb-3">
                            <label for="api_key" class="form-label">API Key</label>
                            <input type="text" name="api_key" class="form-control" id="api_key" required>
                        </div>
                        <div class="mb-3">
                            <label for="expires_in" class="form-label">Expires in (10d, 1y..)</label>
                            <input type="text" name="expires_in" class="form-control" id="expires_in" required>
                        </div>
                        <div class="mb-3">
                            <label for="type" class="form-label">Limit of requests (type)</label>
                            <select class="form-select" name="type" id="type" aria-label="Limit of requests (type)" required>
                                <option value="0">0 - No limit</option>
                                <option value="1">1 - 200 (Basic)</option>
                                <option value="2">2 - 1000 (Premium)</option>
                                <option value="3">3 - 50000 (Business)</option>
                            </select>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" name="is_disabled" value="true" class="form-check-input" id="disabled">
                            <label class="form-check-label" for="disabled">Is Disabled?</label>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
            <%- include('parts/footer.ejs') %>
        </div>
    </body>
</html>